.syn-login-body
  form.syn-form
    .syn-form-logo
      logo
    .syn-form_errors {{ errors }}
    .syn-form_body
      .syn-form_row
        input.syn-form_input( type="text" name="username" autocapitalize="off" required placeholder="{{ USER }}" )
      .syn-form_row
        input.syn-form_input( type="password" name="password" required placeholder="{{ PASSWORD }}" )
      .syn-form_row
        input.syn-form_check.checkbox-custom( id="stay-logged-in" type="checkbox" name="stay-logged-in" )
        label.checkbox-custom-label( for="stay-logged-in" ) {{ REMEMBER_ME }}
      button( type='submit' ).syn-form_submit {{ ACCESS }}
